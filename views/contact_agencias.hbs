{{> navbar }}


<div class="container">
  <h1 style="position: absolute; top:20vh"><strong>Contactos {{nombre}}</strong></h1>
   <table class="table table-dark table-responsive-xl">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Nombre</th>
      <th scope="col">Contacto</th>
      <th scope="col"><a style="color:white" href='/creacontactoagencia/{{id}}'><i class="fa fa-plus"></i></a></i></th>
    </tr>
  </thead>
  <tbody style="max-height: 300px;overflow:auto">
      {{#each contactos}}
      {{#if estado_contacto_agencia}}
    <tr>
      <td scope="row">{{id_contacto_agencia}}</td>
      <td>{{nombre_contacto}}</td>
      <td>{{email_contacto}}</td>
      <td>
        <a style="color:white" class="p-2" href="/editcontactoagencia/{{id_contacto_agencia}}"><i class="fa fa-edit"></i></a><a class="trash" style="color:white" href="" myid="{{id_contacto_agencia}}"><i class="fa fa-trash"></i></a>
        </td>
    </tr>
    {{else}}
    <tr class="bg-danger titulos">
      <th scope="row">{{id_contacto_agencia}}</th>
      <td>{{nombre_contacto}}</td>
      <td>{{email_contacto}}</td>
      <td>
        <a style="color:white" class="p-2"><i class="fa fa-edit"></i></a><a class="check" style="color:white" href="" myid="{{id_contacto_agencia}}"><i class="fa fa-check"></i></a>
        </td>
    </tr>
    {{/if}}
    {{/each}}
  </tbody>
        </table>    
</div>

<div style="position:absolute;bottom:6%;right:6%;">
<a class="btn btn-dark" href="/cagencias" style="color:rgb(247, 213, 213);">Volver</a>
</div>



<script>
     $(".trash").on('click', function(e){
    e.preventDefault();

    let id = $(this).attr('myid');
  
    const swalWithBootstrapButtons = Swal.mixin({
  customClass: {
    confirmButton: 'btn btn-success m-3',
    cancelButton: 'btn btn-danger m-3'
  },
  buttonsStyling: false
})

swalWithBootstrapButtons.fire({
  html:'<span style="background:white color:black"><strong>Quieres Borrar el Usuario?</strong><span>',
  icon: 'warning',
  showCancelButton: true,
  confirmButtonText: 'Si, borralo',
  cancelButtonText: 'Cancelar',
  reverseButtons: true
}).then((result) => {
  if (result.isConfirmed) {
    fetch('/bcagencia',{
      method:'POST',
      headers:{'Content-type': 'application/json'},
      body:JSON.stringify({id:id})

    }).then(res => res.text())
      .then(data =>{
        if(data==="Borrado"){
                    Swal.fire({
                    icon: "success",
                    html:'<span style="background:white color:black"><strong>Borrado Con Exito!</strong><span>',
                    timer:1000,
                    showConfirmButton: false,
                    onClose: ()=>{
                       location.reload();
                    }
              
        });

        }

      })
    } 
})

});


$(".check").on('click', function(e){
 e.preventDefault();
 let id = $(this).attr('myid');

 const swalWithBootstrapButtons = Swal.mixin({
  customClass: {
    confirmButton: 'btn btn-success m-3',
    cancelButton: 'btn btn-danger m-3'
  },
  buttonsStyling: false
})

swalWithBootstrapButtons.fire({
  html:'<span style="background:white color:black"><strong>Quieres Activar el Usuario?</strong><span>',
  icon: 'warning',
  showCancelButton: true,
  confirmButtonText: 'Si, Activalo',
  cancelButtonText: 'Cancelar',
  reverseButtons: true
}).then((result) => {
  if (result.isConfirmed) {
    fetch('/activacontactoagencia',{
      method:'POST',
      headers:{'Content-type': 'application/json'},
      body:JSON.stringify({id:id})

    }).then(res => res.text())
      .then(data =>{
        if(data==="Activado"){
                    Swal.fire({
                    icon: "success",
                    html:'<span style="background:white color:black"><strong>Activado Con Exito!</strong><span>',
                    timer:1000,
                    showConfirmButton: false,
            
                onClose: () => {
                 location.reload();
                }
        });

        }

      })
    } 
});

});








</script>


